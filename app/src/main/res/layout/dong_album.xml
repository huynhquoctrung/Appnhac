<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:id="@+id/linearcardviewalbum"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageviewalbum"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:layout_width="200dp"
            android:layout_height="200dp" />
        <TextView
            android:textColor="#000000"
            android:id="@+id/textviewtenalbum"
            android:maxWidth="200dp"
            android:textSize="20sp"
            android:text="Ngay xuan long phung sum vay"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textviewtencasialbum"
            android:textColor="#9e9797"
            android:textSize="15sp"
            android:maxWidth="200dp"
            android:text="Noo phuoc thinh"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.v7.widget.CardView>